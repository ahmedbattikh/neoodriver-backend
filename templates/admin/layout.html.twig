<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{ block('content_title') }}</title>
  <link rel="stylesheet" href="/vendor/adminlte/dist/css/adminlte.min.css">
  <link rel="stylesheet" href="/vendor/fontawesome/css/all.min.css">
</head>
<body class="layout-fixed sidebar-expand-lg sidebar-open bg-body-tertiary">
<div class="app-wrapper">
  <nav class="app-header navbar navbar-expand bg-body">
    <div class="container-fluid">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" data-lte-toggle="sidebar" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-md-block"><a href="{{ path('admin') }}" class="nav-link">Home</a></li>
      </ul>
      <ul class="navbar-nav ms-auto">
        <li class="nav-item"><a class="nav-link" href="#" data-lte-toggle="fullscreen"><i class="fas fa-expand"></i></a></li>
        <li class="nav-item dropdown user-menu">
          <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
            <img src="/tempalte%20html/assets/img/user2-160x160.jpg" class="user-image rounded-circle shadow" alt="User" />
            <span class="d-none d-md-inline">{{ app.user ? (app.user.firstName ~ ' ' ~ app.user.lastName)|trim : 'User' }}</span>
          </a>
          <ul class="dropdown-menu dropdown-menu-lg dropdown-menu-end">
            <li class="user-header text-bg-primary">
              <img src="/tempalte%20html/assets/img/user2-160x160.jpg" class="rounded-circle shadow" alt="User" />
              <p>
                {{ app.user ? app.user.email : '' }}
                <small>Signed in</small>
              </p>
            </li>
            <li class="user-footer">
              <a href="{{ app.user ? path('admin_user_show', { id: app.user.id }) : '#' }}" class="btn btn-default btn-flat">Profile</a>
              <a href="/admin/logout" class="btn btn-default btn-flat float-end">Sign out</a>
            </li>
          </ul>
        </li>
      </ul>
    </div>
  </nav>
  <aside class="app-sidebar bg-body-secondary shadow" data-bs-theme="dark">
    <div class="sidebar-brand">
      <a href="{{ path('admin') }}" class="brand-link">
        <img src="/tempalte%20html/assets/img/AdminLTELogo.png" alt="Logo" class="brand-image opacity-75 shadow" />
        <span class="brand-text fw-light">AdminLTE 4</span>
      </a>
    </div>
    <div class="sidebar-wrapper">
      <nav class="mt-2">
        <ul class="nav sidebar-menu flex-column" data-lte-toggle="treeview" role="navigation" aria-label="Main navigation" data-accordion="false" id="navigation">
          <li class="nav-item">
            <a href="{{ path('admin') }}" class="nav-link"><i class="nav-icon fas fa-home"></i><p>Dashboard</p></a>
          </li>
          <li class="nav-item">
            <a href="{{ path('admin_user_wizard', { step: 1 }) }}" class="nav-link"><i class="nav-icon fas fa-user-plus"></i><p>Add User (Wizard)</p></a>
          </li>
          <li class="nav-item">
            <a href="{{ path('admin_users_list') }}" class="nav-link"><i class="nav-icon fas fa-users"></i><p>Users</p></a>
          </li>
        </ul>
      </nav>
    </div>
  </aside>
  <main class="app-main">
    <div class="app-content-header">
      <div class="container-fluid">
        <div class="row">
          <div class="col-sm-6"><h3 class="mb-0">{% block content_title %}{% endblock %}</h3></div>
        </div>
      </div>
    </div>
    <div class="app-content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-body">
                {% block content %}{% endblock %}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
  <footer class="main-footer">
    <div class="float-right d-none d-sm-inline"></div>
    <strong>&copy; {{ "now"|date("Y") }}</strong>
  </footer>
</div>
<script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="/vendor/adminlte/dist/js/adminlte.min.js"></script>
{% block body_javascript %}{% endblock %}
</body>
</html>